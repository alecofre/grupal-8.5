<h1>Noticias encontradas</h1>
<br>
<br>
    <div id="nuevas">
        <div class="container text-center">
            <div class="row">
            <% if @noticias.length > 0 %>
                <% @noticias.each do |noticia|%>
                    <div class="card bg-light col-12 col-lg-2 col-md-6">
                        <%= link_to noticia_path(noticia.id) do %>
                            <h2><%= noticia.encabezado %></h2>
                        <% end %>
                        <span><%= noticia.tipo %></span>
                    </div>
                <%end%>
            <%else%>
                <div class="card bg-danger col-12 col-lg-3 col-md-6">
                    <h3>NO SE ENCONTRARON NOTICIAS</h3>
                </div>
            <%end%>
            </div>
        </div>
    </div>